        }
      ]
    },
    {
      "name": "use-translation",
      "type": "registry:hook",
      "title": "Use Translation",
      "description": "A hook that provides translation functionality.",
      "files": [
        {
          "path": "registry/new-york/hooks/use-translation.ts",
          "type": "registry:hook"
        }
      ]
    }
  ]
